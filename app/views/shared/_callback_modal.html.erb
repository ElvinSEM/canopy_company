<div id="callback-modal" class="modal fade" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Заказать звонок</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: Lead.new, url: leads_path, method: :post, local: false, html: { id: "callback-form", class: "needs-validation", novalidate: true } do |f| %>
          <div class="mb-3">
            <%= f.label :name, "Ваше имя", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true, placeholder: "Введите ваше имя" %>
            <div class="invalid-feedback">Введите ваше имя</div>
          </div>

          <div class="mb-3">
            <%= f.label :phone, "Ваш телефон", class: "form-label" %>
            <%= f.telephone_field :phone, class: "form-control", required: true, placeholder: "Введите ваш телефон" %>
            <div class="invalid-feedback">Введите корректный телефон</div>
          </div>

          <%= f.hidden_field :message, value: "Запрос на обратный звонок" %>

          <div class="text-center">
            <%= f.submit "Отправить", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
