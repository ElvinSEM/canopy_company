<!-- app/views/home/_testimonials.html.erb -->
<section id="testimonials" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Отзывы клиентов</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Что говорят наши клиенты о сотрудничестве с нами
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% testimonials = [
        { name: "Сейтибрамов Эльдар", position: "Владелец загородного дома", text: "Отличное качество, вежливые мастера. Сделали всё аккуратно и быстрее, чем обещали.", rating: 5 },
        { name: "Сейтибрамов Назим", position: "Ресторатор", text: "Очень доволен результатом — навес выглядит великолепно. Сделали террасу точно в срок.", rating: 5 },
        { name: "Абдурашитов Эмиль", position: "Директор компании", text: "Профессиональная команда! Чётко, аккуратно, без лишних разговоров. Рекомендую.", rating: 5 }
      ] %>

      <% testimonials.each do |testimonial| %>
        <div class="bg-gray-50 rounded-2xl p-6 border border-gray-200 hover:border-blue-200 transition-all duration-300">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-full flex items-center justify-center text-white font-bold">
              <%= testimonial[:name].split.map { |n| n[0] }.join %>
            </div>
            <div>
              <h4 class="font-bold text-gray-900"><%= testimonial[:name] %></h4>
              <p class="text-gray-600 text-sm"><%= testimonial[:position] %></p>
            </div>
          </div>

          <div class="flex gap-1 mb-3">
            <% 5.times do |i| %>
              <svg class="w-5 h-5 <%= i < testimonial[:rating] ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            <% end %>
          </div>

          <p class="text-gray-700 leading-relaxed"><%= testimonial[:text] %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>